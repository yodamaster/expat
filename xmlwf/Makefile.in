srcdir=@srcdir@

LIBDIR= ../lib/.libs
INCDIR= $(srcdir)/../lib

LDFLAGS= @LDFLAGS@ -static
CFLAGS= @CFLAGS@ -I$(INCDIR)
CC = @CC@

OBJS= xmlwf.o xmlfile.o codepage.o @FILEMAP_OBJ@
LIBS= -L$(LIBDIR) -lexpat

VPATH = @srcdir@

xmlwf: $(OBJS)
	$(CC) -o xmlwf $(LDFLAGS) $(OBJS) $(LIBS)
